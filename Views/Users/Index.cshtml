@model IEnumerable<User>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

<div class="container mt-4 table-responsive ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Lista de Usuarios</h2>
        <a asp-controller="Users" asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-user-plus"></i> Nuevo Usuario
        </a>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success d-flex justify-content-between align-items-center gap-1" role="alert">
            <div class="d-flex align-items-center gap-1">
                <i class="bi bi-check-circle-fill"></i>
                <div>
                    @successMessage
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="bg-primary text-white">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Fecha de Nacimiento</th>
            <th>Genero</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <!-- Carga dinámica de datos desde la variable @Model -->
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Lastname</td>
                <td>@user.Email</td>
                <td>@user.DateOfBirth.ToLongDateString()</td>
                <td>@user.Gender</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit"  asp-route-id="@user.Id"  class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                    <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>