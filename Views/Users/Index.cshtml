@using CRUD_MVC_users.Models.Enums
@model IEnumerable<User>

<div class="container mt-4 table-responsive ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Lista de Usuarios</h2>
        <button class="btn btn-success btn-lg" onclick="registrarUsuario()">
            <i class="fas fa-user-plus"></i> Nuevo Usuario
        </button>
    </div>
    
    <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="bg-primary text-white">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Fecha de Nacimiento</th>
            <th>Genero</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <!-- Carga dinámica de datos desde la variable @Model -->
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Lastname</td>
                <td>@user.Email</td>
                <td>@user.DateBirth.ToLongDateString()</td>
                <td>@user.Gender</td>
                <td>
                    <a href="#" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                    <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>