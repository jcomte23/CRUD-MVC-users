@using CRUD_MVC_users.Models.Enums
@model IEnumerable<User>

<div class="container-fluid mt-4">
    <h2 class="text-center text-primary mb-4">Lista de Usuarios</h2>
    <table class="table table-striped table-hover table-bordered shadow-lg">
        <thead class="bg-primary text-white">
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Fecha de Nacimiento</th>
            <th>Fecha de creación</th>
            <th>Ultima actualización</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        <!-- Carga dinámica de datos desde la variable @Model -->
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Lastname</td>
                <td>@user.Email</td>
                <td>@user.DateBirth.ToLongDateString()</td>
                <td>@user.CreatedAt.ToString("F")</td>
                <td>@user.UpdatedAt.ToString("F")</td>
                <td>
                    <a href="#" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</a>
                    <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>