@using CRUD_MVC_users.Models.Enums
@model CRUD_MVC_users.DTOs.UserDto

<div class="container mt-4">
    <h2 class="text-primary text-center mb-4">Registrar Nuevo Usuario</h2>
    
    <div class="card shadow-lg p-4">
        <form asp-controller="Users" asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nombre</label>
                <input asp-for="Name" class="form-control" placeholder="Ingrese su nombre" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Lastname" class="form-label">Apellido</label>
                <input asp-for="Lastname" class="form-control" placeholder="Ingrese su apellido" required>
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo Electrónico</label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Ingrese su correo" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateBirth" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="DateBirth" class="form-control" type="date" required>
                <span asp-validation-for="DateBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Género</label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control" required>
                    <option value="">Seleccione su género</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="Users" asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver</a>
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Registrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
